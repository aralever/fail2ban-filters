[DEFAULT]
bantime = 3600
maxretry = 3
ignoreip = 127.0.0.1/8 80.32.127.48

destemail = root
sender = fail2ban@example.com

[sshd]
enabled = true
port	= 22

[sshd-ddos]
enabled = true
port    = 22

[pure-ftpd]
enabled  = true
maxretry = 3

[apache-auth]
enabled = true

[apache-badbots]
enabled = true

[apache-noscript]
enabled = true

[apache-overflows]
enabled = true

[apache-nohome]
enabled = true

[apache-botsearch]
enabled = true

[apache-fakegooglebot]
enabled = true

[apache-shellshock]
enabled = true

[apache-phpmyadmin]
enabled  = true
port     = http,https
filter   = apache-phpmyadmin
logpath  = %(apache_error_log)s
maxretry = 3

[apache-postflood]
enabled  = true
filter   = apache-postflood
logpath  = %(apache_access_log)s
findtime = 60
maxretry = 29
bantime  = 300

[apache-getdos]
enabled  = false
port     = http,https
filter   = apache-getdos
logpath  = %(apache_access_log)s
maxretry = 30
findtime = 60
bantime  = 300

[wp-auth]
enabled = true
port    = http,https
filter  = wp-auth
logpath = %(apache_access_log)s
maxretry = 8

[wp-xmlrpc]
enabled = true
port    = http,https
filter  = wp-xmlrpc
logpath = %(apache_access_log)s
maxretry = 4

